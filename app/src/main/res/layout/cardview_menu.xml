<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="@color/menu_light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Item"
            android:id="@+id/menu_item"
            android:fontFamily="sans-serif-thin"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:id="@+id/menu_price"
            android:fontFamily="sans-serif-condensed"
            android:textSize="18dp"
            android:layout_below="@+id/menu_item"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/menu_add"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/menu_add_button" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_quantity"
            android:fontFamily="sans-serif-condensed"
            android:layout_toEndOf="@+id/menu_add"
            android:layout_centerInParent="true"
            android:layout_below="@+id/menu_price"
            android:layout_alignLeft="@+id/menu_add"
            android:layout_alignStart="@+id/menu_add"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>